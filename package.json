{
  "name": "radiocalico",
  "version": "1.0.0",
  "description": "Radio Calico - Live radio streaming application",
  "private": true,
  "scripts": {
    "audit": "npm audit --audit-level=moderate",
    "minify:css": "csso static/style.css -o static/style.min.css",
    "minify:js": "terser static/script.js -o static/script.min.js -c -m",
    "minify": "npm run minify:css && npm run minify:js",
    "build": "npm run minify",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "hls.js": "^1.5.15"
  },
  "devDependencies": {
    "csso-cli": "^4.0.2",
    "terser": "^5.44.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "static/**/*.js",
      "!static/**/*.min.js",
      "!static/js/hls.min.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
